{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules", "**/dist"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
      	"indentWidth": 4,
		"lineWidth": 100,
      	"lineEnding": "lf"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noStaticOnlyClass": "off"
			}
		},
		"ignore": ["assets/*.js"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
